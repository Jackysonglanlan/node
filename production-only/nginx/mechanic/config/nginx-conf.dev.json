{
  "settings": {
    "conf": "ROOT_DIR/tmp/nginx",
    "overrides": "ROOT_DIR/tmp/nginx",
    "logs": "ROOT_DIR/tmp/nginx",
    "pid": "ROOT_DIR/tmp/nginx/nginx.pid",
    "start": "nginx -c ROOT_DIR/tmp/nginx/mechanic.conf",
    "restart": "nginx -s reload -c ROOT_DIR/tmp/nginx/mechanic.conf",
    "bind": "*",
    "template": "production-only/nginx/mechanic/config/template.conf"
  },
  "sites": [{
    "shortname": "yqj-wit-work",
    "host": "dev.local.com",
    "port": 3000,
    "backends": ["localhost:5001", "localhost:5002", "localhost:5000"],
    "static": "ROOT_DIR/production-only/nginx/static",
    "autoindex": false,
    "access_control_allow_origin": "$http_origin",
    "https": false
  }, {
    "shortname": "mongo-ui",
    "host": "localhost",
    "port": 3100,
    "backends": ["localhost:5100"],
    "https": false
  }, {
    "shortname": "redis-ui",
    "host": "localhost",
    "port": 3200,
    "backends": ["localhost:5200"],
    "https": false
  }, {
    "shortname": "bull-ui",
    "host": "localhost",
    "port": 3300,
    "backends": ["localhost:5300"],
    "https": false
  }, {
    "shortname": "swagger-ui",
    "host": "localhost",
    "port": 3400,
    "backends": ["localhost:5400"],
    "https": false
  }]
}

